@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RolesList";
}

<h1>RolesList</h1>
<button class="btn btn-outline-primary">
    <a asp-action="CreateRole" asp-controller="CPanel">Add Role</a>
</button>
<table class="table table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(m=>m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.Name)</th>
        <th>Operations</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="EditRole" asp-controller="CPanel" class="btn btn-outline-success" asp-route-id="@item.Id">Edit</a>
                <a asp-action="DeleteRole" asp-controller="CPanel" class="btn btn-outline-warning" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>

