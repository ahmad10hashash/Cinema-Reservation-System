@model CMSpro1.Models.ViewModels.EditViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roleid" class="control-label"></label>
                <input asp-for="Roleid" class="form-control" />
                <span asp-validation-for="Roleid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
    
</div>
<div class="card">
    <div class="card-header">
        Users in this role
    </div>
    <div class="card-body">
        @if(Model.Users.Any())
        {
        @foreach (var User in Model.Users)
        {
            <h3>
                @User
            </h3>
            }
        }
        else
        {
            <h3>There is no users in this role</h3>
        }
    </div>
    <div class="card-footer">
        <a asp-action="EditUserInRole" asp-controller="Account" class="btn btn-outline-success" asp-route-id="@Model.Roleid">Add/remove roles from this List</a>
    </div>
</div>

    <a asp-action="RolesList" asp-controller="Account" class="btn btn-outline-primary">Back to role list</a>




