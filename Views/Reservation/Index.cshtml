@model Movie
@{
    ViewData["Title"] = "Index";
}
<br/>
<br/>
<br/>
<br />
<section class="ftco-about d-md-flex">
    <div class="one-half img" style="background-image: url('@Url.Content("~/images/"+Model.PosterPath)');"></div>
    <div class="one-half ftco-animate">
        <div class="overlap">
            <div class="heading-section ftco-animate ">
                
                <h2 class="mb-4">@Model.MovieTitle</h2>
            </div>
            <div>
                <p>Genre: @Model.Genre</p>
                <p>Duration: @Model.Duration</p>
                <p>Release Date: @Model.ReleaseDate.ToShortDateString()</p>
                <p>Language: @Model.Language</p>
                <p>Subtitle: @Model.Subtitle</p>
                <p>@Model.MovieDescription</p>
            </div>
        </div>

    </div>
	
	
    

</section>
<br />
<br />
<div class="row justify-content-center mb-5">
	<div class="col-md-7 heading-section text-center ftco-animate">
		<span class="subheading">Movie</span>
		<h2 class="mb-4">Trailer</h2>

	</div>
</div>
<div class="row justify-content-center mb-5">
	<iframe width="1000" height="500" src="@Model.TrailerPath" frameborder="0" allowfullscreen></iframe>
</div>
