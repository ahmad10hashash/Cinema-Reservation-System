@model IEnumerable<CRS.Models.ShowTime>

@{
    ViewData["Title"] = "Index";
}

<h1>Show Times</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.HallName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            
            <td>
                    @Html.DisplayFor(modelItem => item.HallName)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="ShowSeatsMap" asp-route-id="@item.Id">Seats Map</a>
            </td>
        </tr>
}
    </tbody>
</table>
