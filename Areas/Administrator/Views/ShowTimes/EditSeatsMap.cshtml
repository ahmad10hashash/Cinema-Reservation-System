@using static CRS.Models.Seat
@model SeatsMap
@{
    ViewData["Title"] = "EditSeatsMap";
}

<h1>EditSeatsMap</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSeatsMap">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MovieName" />
            <input type="hidden" asp-for="HallName" />
            <input type="hidden" asp-for="DateAndTime" />
            <input type="hidden" asp-for="HallType" />
            <input type="hidden" asp-for="ShowTimeID" />
            <input type="hidden" />
            <div class="form-group">
                <label asp-for="TheSeat" class="control-label"></label>
